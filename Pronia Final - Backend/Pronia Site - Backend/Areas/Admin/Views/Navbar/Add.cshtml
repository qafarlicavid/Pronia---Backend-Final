@using Pronia_Site___Backend.Areas.Admin.ViewModels.Navbar
@model AddViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Navbars</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-navbar-add">
                       
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ToURL"></label>
                            <input asp-for="ToURL" class="form-control">
                            <span asp-validation-for="ToURL" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Order"></label>
                            <input asp-for="Order" class="form-control">
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsMain"></label>
                            <input type="checkbox" asp-for="IsMain" class="form-check-input">
                            <span asp-validation-for="IsMain" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsOnHeader"></label>
                            <input type="checkbox" asp-for="IsOnHeader" class="form-check-input">
                            <span asp-validation-for="IsOnHeader" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsOnFooter"></label>
                            <input type="checkbox" asp-for="IsOnFooter" class="form-check-input">
                            <span asp-validation-for="IsOnFooter" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>

                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>