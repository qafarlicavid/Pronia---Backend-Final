@using Pronia_Site___Backend.Areas.Admin.ViewModels.BlogVideo
@model AddViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add new Blog video</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-route="admin-plant-video-add" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label>video</label>
                            <input asp-for="Video" class="form-control">
                            <span asp-validation-for="Video" class="text-danger"></span>
                            <input asp-for="VideoURLFromBrowser" class="form-control">
                            <span asp-validation-for="VideoURLFromBrowser" class="text-danger"></span>
                            <br />
                            <span asp-validation-for="Video.FileName" class="text-danger"></span>
                            <br />
                            <span asp-validation-for="Video.Length" class="text-danger"></span>
                            <input asp-for="Order" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>